<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <!-- Define the registration service bean -->
    <bean id="registrationService" class="springResttt.service"/>

    <!-- Define the registration controller bean -->
    <bean id="registrationController" class="springResttt.controller">
        <constructor-arg ref="registrationService"/>
    </bean>

</beans>
